function globalRd(): Perm
  ensures none < result && result < write

method client(x: Ref, n: Int) {
  inhale n > 0
  inhale (-n < 0 ? n : -n) * globalRd() < write
  assert (-n < 0 ? n : -n) * globalRd() < write // Fails sometimes, but not always
}
